<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".addNodeActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Node ID#:"
        android:id="@+id/textView_memo"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Placeholder"
        android:id="@+id/textView_id"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/textView_name"
        android:layout_alignStart="@+id/textView_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Placeholder"
        android:id="@+id/textView_name"
        android:layout_gravity="center_vertical"
        android:layout_alignTop="@+id/textView6"
        android:layout_alignLeft="@+id/editText_title"
        android:layout_alignStart="@+id/editText_title" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Node Type:"
        android:id="@+id/textView6"
        android:layout_below="@+id/textView_memo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="29dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Memo Title:"
        android:id="@+id/textView8"
        android:layout_marginTop="34dp"
        android:textStyle="bold"
        android:layout_below="@+id/textView6" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_title"
        android:hint="Enter memo title..."
        android:textStyle="italic"
        android:autoText="false"
        android:textAlignment="textStart"
        android:inputType="textNoSuggestions|text"
        android:isScrollContainer="false"
        android:background="@android:color/transparent"
        android:layout_alignBottom="@+id/textView8"
        android:layout_toRightOf="@+id/textView8"
        android:layout_marginLeft="34dp"
        android:layout_marginStart="34dp"
        android:layout_alignRight="@+id/editText_memo"
        android:layout_alignEnd="@+id/editText_memo"
        android:textCursorDrawable="@null"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Memo Description"
        android:id="@+id/textView9"
        android:layout_below="@+id/textView8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="34dp"
        android:textStyle="bold" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit Memo"
        android:id="@+id/submitMemoButton"
        style="@style/DefaultButtonText"
        android:background="@layout/button_default_bg"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textNoSuggestions|textFilter|textMultiLine"
        android:ems="10"
        android:id="@+id/editText_memo"
        android:hint="Leave a memo for future explorers to find!"
        android:textStyle="italic"
        android:maxLength="255"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/submitMemoButton"
        android:layout_alignRight="@+id/submitMemoButton"
        android:layout_alignEnd="@+id/submitMemoButton"
        android:layout_below="@+id/textView9"
        android:background="@drawable/shape"
        android:textAlignment="center"
        android:textCursorDrawable="@null"/>


</RelativeLayout>
